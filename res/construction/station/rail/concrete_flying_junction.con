function data()
    return {
        type = "RAIL_STATION",
        description = {
            name = _("Concrete Flying Junction"),
            description = _("An European style flying junction")
        },
        availability = {
            yearFrom = 1892
        },
        -- buildMode = "MULTI",
        -- categories = {"tracks"},
        order = 27218,
        -- skipCollision = false,
        -- autoRemovable = false,
        params = params(),
        
        updateFn = function(params)
            defaultParams(params)
            
            local result = {}
            
            local deg = listDegree[params.xDegDec + 1] + params.xDegUni
            local rad = math.rad(deg)
            
            local trackType = ({"standard.lua", "high_speed.lua"})[params.trackType + 1]
            local catenary = params.catenary == 1
            
            local nbLowerTracks = params.nbLowerTracks + 1
            local nbUpperTracks = params.nbUpperTracks + 1
            
            local nbPerGroup = ({1, 2, nbLowerTracks})[params.nbPerGroup + 1]
            
            local rLower = params.rLower == 0 and 0 or rList[params.rLower] * 1000
            local rUpper = params.rUpper == 0 and 0 or rList[params.rUpper] * 1000
            
            local xlOffsets, ulOffsets = buildCoors(nbUpperTracks, nbUpperTracks)
            local xuOffsets, uuOffsets = buildCoors(nbUpperTracks, nbUpperTracks)
            
            
            
            if (rLower == 0 and rUpper == 0) then
                local xlLines = fLines(xlOffsets, 0)
                local ulLines = fLines(ulOffsets, 0)
                local xuLines = fLines(xuOffsets, rad)
                local uuLines = fLines(uuOffsets, rad)
                
                local ulLimits = func.map2(ulLines, ulOffsets, function(l, x) return
                    {
                        xOffset = x,
                        line = l,
                        limits = {
                            sup = l - uuLines[#uuLines],
                            inf = l - uuLines[1]
                        }
                    } end)
                
                
                local uuLimits = func.map2(uuLines, uuOffsets, function(l, x) return
                    {
                        xOffset = x,
                        line = l,
                        limits = {
                            sup = l - ulLines[1],
                            inf = l - ulLines[#ulLines]
                        }
                    } end)
                
                local lowerTrackLength = ulLimits[1].limits.sup.y - ulLimits[#ulLimits].limits.inf.y
                local upperTrackLength = uuLimits[#uuLimits].limits.sup.y - uuLimits[1].limits.inf.y
                
                local lGroup = func.map(xlOffsets, function(x) return
                    {
                        mpt = coor.transX(x),
                        mvec = coor.I(),
                        parity = coor.I(),
                        id = 1,
                        x = x
                    } end)
                
                local uGroup = func.map(xuOffsets, function(x) return
                    {
                        mpt = coor.transZ(11) * coor.transX(x) * coor.rotZ(rad),
                        mvec = coor.rotZ(rad),
                        parity = coor.I(),
                        id = 2,
                        x = x
                    } end)
                
                local lowerTracks = station.generateTrackGroups(lGroup, lowerTrackLength)
                local upperTracks = station.generateTrackGroups(uGroup, lowerTrackLength)
                
                local trackBuilder = trackEdge.builder(catenary, trackType)
                local TLowerTracks = trackBuilder.normal(station.noSnap)
                local TUpperTracks = trackBuilder.nonAligned(station.noSnap)
                local TUpperTracksBridge = trackBuilder.bridge(bridgeType,
                    function(e) return func.filter(func.seq(0, #e - 1), function(n) return n % 2 == 1 end) end)
                result.models = {}
                
                
                result.edgeLists =
                    {
                        TUpperTracks(upperTracks),
                        TLowerTracks(lowerTracks),
                    -- TUpperTracksBridge(func.concat(coor.applyEdges(mRotExt, mRotVec)(upperExt1), coor.applyEdges(mRotExt2, mRotExtVec2)(upperExt1))),
                    }
            elseif (rLower == 0 and rUpper > 0) then
                
                local xlLines = fLines(xlOffsets, 0)
                local ulLines = fLines(ulOffsets, 0)
                
                local xuArcs = fArcs(xuOffsets, rad, rUpper)
                local uuArcs = fArcs(uuOffsets, rad, rUpper)
                
                -- dump.dump(xlLines)
                -- dump.dump(xuArcs)
                local intersectionSelector = function(l, r) if (rad > 0) then return (l.y < r.y) else return (l.y > r.y) end end
                
                local xlLimits = func.map2(xlLines, xlOffsets, function(l, x) return
                    {
                        xOffset = x,
                        line = l,
                        limits = {
                            sup = func.min(uuArcs[#uuArcs] / l, intersectionSelector),
                            inf = func.min(uuArcs[1] / l, intersectionSelector)
                        },
                        gen = generateLineSegment
                    } end)
                
                local ulLimits = func.map2(ulLines, ulOffsets, function(l, x) return
                    {
                        xOffset = x,
                        line = l,
                        limits = {
                            sup = func.min(uuArcs[#uuArcs] / l, intersectionSelector),
                            inf = func.min(uuArcs[1] / l, intersectionSelector)
                        },
                        gen = generateLineSegment
                    } end)
                
                local xuLimits = func.map2(xuArcs, xuOffsets, function(a, x) return
                    {
                        xOffset = x,
                        arc = a,
                        limits = {
                            sup = func.min(a / ulLines[1], intersectionSelector),
                            inf = func.min(a / ulLines[#ulLines], intersectionSelector)
                        },
                        gen = generateArc
                    } end)
                
                local uuLimits = func.map2(uuArcs, uuOffsets, function(a, x) return
                    {
                        xOffset = x,
                        arc = a,
                        limits = {
                            sup = func.min(a / ulLines[1], intersectionSelector),
                            inf = func.min(a / ulLines[#ulLines], intersectionSelector)
                        },
                        gen = generateArc
                    } end)
                
                
                local lowerTracks = generateTrackGroups(xlLimits)
                local upperTracks = generateTrackGroups(xuLimits, {mpt = coor.transZ(11), mvec = coor.I()})
                
                local trackBuilder = trackEdge.builder(catenary, trackType)
                local TLowerTracks = trackBuilder.normal(station.noSnap)
                local TUpperTracks = trackBuilder.nonAligned(station.noSnap)
                local TUpperTracksBridge = trackBuilder.bridge(bridgeType,
                    function(e) return func.filter(func.seq(0, #e - 1), function(n) return n % 2 == 1 end) end)
                result.models = {}
                
                result.edgeLists =
                    {
                        TUpperTracks(upperTracks),
                        TLowerTracks(lowerTracks),
                    -- TUpperTracksBridge(func.concat(coor.applyEdges(mRotExt, mRotVec)(upperExt1), coor.applyEdges(mRotExt2, mRotExtVec2)(upperExt1))),
                    }
            end
            
            
            -- local basePt = {
            --     coor.xyz(-0.5, -0.5, 0),
            --     coor.xyz(0.5, -0.5, 0),
            --     coor.xyz(0.5, 0.5, 0),
            --     coor.xyz(-0.5, 0.5, 0)
            -- }
            -- facesU = func.map(basePt, function(f) return f .. coor.scaleX(nbUpperTracks * 5 + 1) * coor.scaleY(upperTrackLength) * coor.rotZ(rad) end)
            -- facesL = func.map(basePt, function(f) return f .. coor.scaleX(nbLowerTracks * 5.25) * coor.scaleY(lowerTrackLength) end)
            result.terrainAlignmentLists = {{
                type = "EQUAL",
                faces = {
                -- func.map(facesU, coor.vec2Tuple),
                }
            },
            }
            
            -- End of generation
            -- Slope, Height, Mirror treatment
            local slope = slopeList[params.slope + 1]
            local ha = heightList[params.height + 1]
            local isMir = {false, true}
            local mirrored = isMir[params.isMir + 1]
            
            local mz = coor.transZ(ha)
            local mr = slopeMRotX[slope]
            local mf = mirrored and coor.flipX() or coor.I()
            
            local mpt = coor.mul(mf, mr, mz)
            local mvec = coor.mul(mf, mr)
            
            local mapEdgeList = function(edgeList)
                edgeList.edges = func.map(edgeList.edges, coor.applyEdge(mpt, mvec))
                return edgeList
            end
            
            result.edgeLists = func.map(result.edgeLists, mapEdgeList)
            
            local mapModel = function(model)
                model.transf = coor.mul(model.transf, mpt)
                return model
            end
            
            result.models = func.map(result.models, mapModel)
            
            local mapTerrainList = function(ta)
                local mapTerrain = function(t) return (coor.tuple2Vec(t) .. mpt):toTuple() end
                local mapFaces = func.bind(func.map, nil, mapTerrain)
                ta.faces = func.map(ta.faces, mapFaces)
                return ta
            end
            result.terrainAlignmentLists = func.map(result.terrainAlignmentLists, mapTerrainList)
            
            result.terminalGroups = {}
            
            result.cost = 1000
            result.maintenanceCost = 1000 / 6
            
            return result
        end
    }

end
